<p id="notice"><%= notice %></p>
<div class="title-container">
  <h1>Meals</h1>
  <%= link_to 'New Meal', new_meal_path, class: "btn btn-primary" %>
</div>

<table>
  <thead>
    <tr>
      <th>Meal</th>
      <th>Description</th>
      <th>Calories</th>
      <th>Fats</th>
      <th>Protein</th>
      <th>Carbs</th>
      <th>Consumed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @meals.each do |meal| %>
      <tr>
        <td><%= meal.meal %></td>
        <td><%= meal.description %></td>
        <td><%= meal.calories %></td>
        <td><%= meal.fats %></td>
        <td><%= meal.protein %></td>
        <td><%= meal.carbs %></td>
        <td><%= meal.consumed %></td>
        <% if user_signed_in? %>
        <td><%= link_to 'Show', meal, class: "btn btn-secondary" %></td>
        <td><%= link_to 'Edit', edit_meal_path(meal), class: "btn btn-secondary" %></td>
        <td><%= link_to 'Destroy', meal, class: "btn btn-secondary", method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>  
      </tr>
    <% end %>
  </tbody>
</table>


